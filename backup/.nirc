[projectAgent]
{WORKSPACE}/Spotec=yarn
{COMPANY}=pnpm
{OSS}/ant-design=yarn
{OSS}/ant-design/style=pnpm
{OSS}/ant-design/pro-editor=pnpm
{OSS}/react-component=yarn
{OSS}/antd-issue-helper=yarn
{OSS}/material-ui=yarn
{OSS}/issues-helper=yarn
{OSS}/issues-similarity-analysis=yarn
{OSS}/cssinjs=yarn
{OSS}/postcss-pxtorem=npm
{OSS}/ant-design-vue=yarn
{OSS}/react-data-grid=npm