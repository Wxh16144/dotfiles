[
  {
    "version" : 2
  },
  {
    "action" : {
      "script" : "# https:\/\/superuser.com\/questions\/288320\/whats-like-osxs-pbcopy-for-linux\n# MacOS\n${git} branch --show-current | pbcopy\n\n# https:\/\/manual.raycast.com\/deeplinks\nopen \"raycast:\/\/confetti\"\n\n",
      "showOutput" : false,
      "type" : "sh",
      "waitForExit" : true
    },
    "name" : "?A info",
    "target" : "repository"
  },
  {
    "action" : {
      "script" : "archive_dir=\"${repo:path}\/archive\"\n\nif [ ! -d \"$archive_dir\" ]; then\n  mkdir \"$archive_dir\"\nfi\n\narchive_file=\"$archive_dir\/${repo:name}_${sha:abbr}.tar.gz\"\n\ngit archive --format=tar.gz --output=\"$archive_file\" ${sha:abbr}\n\n# https:\/\/manual.raycast.com\/deeplinks\nif [[ $? -eq 0 ]]; then\n    open \"raycast:\/\/confetti\"\nfi\n\nopen \"$archive_dir\"\n\necho \"$archive_file\" | pbcopy",
      "showOutput" : false,
      "type" : "sh",
      "waitForExit" : true
    },
    "name" : "?Archive",
    "target" : "revision"
  },
  {
    "action" : {
      "args" : "commit --amend --no-edit --no-verify",
      "path" : "${git}",
      "showOutput" : false,
      "type" : "process",
      "waitForExit" : true
    },
    "name" : "?Commit Amend",
    "target" : "repository"
  },
  {
    "action" : {
      "script" : "git format-patch -1 ${sha}",
      "showOutput" : false,
      "type" : "sh",
      "waitForExit" : true
    },
    "name" : "?Generate PatchFile",
    "target" : "revision"
  },
  {
    "action" : {
      "script" : "open ${repo:path}",
      "showOutput" : false,
      "type" : "sh",
      "waitForExit" : true
    },
    "name" : "?Open in Finder",
    "target" : "repository"
  },
  {
    "action" : {
      "script" : "open -a SourceTree ${repo:path}",
      "showOutput" : false,
      "type" : "sh",
      "waitForExit" : true
    },
    "name" : "?Open in Sourcetree",
    "target" : "repository"
  },
  {
    "action" : {
      "args" : "${repo:path} --disable-extensions",
      "path" : "\/usr\/local\/bin\/code",
      "showOutput" : false,
      "type" : "process",
      "waitForExit" : true
    },
    "name" : "?Open in VSCode (Disable Eextensions)",
    "target" : "repository"
  },
  {
    "action" : {
      "script" : "SEPARATOR=$'\\t'\n${git} for-each-ref \\\n  --sort=-committerdate \\\n  --count=10 \\\n  --format=\"%(refname:short)${SEPARATOR}%(committerdate:relative)${SEPARATOR}%(authorname)\" \\\n  refs\/heads | \\\n  awk -F '\\t' '{printf \"%-40s %-20s %-20s\\n\", $1, $2, $3}'",
      "showOutput" : true,
      "type" : "sh",
      "waitForExit" : true
    },
    "name" : "?Recent Branches ï¼ˆ10 items",
    "target" : "repository"
  },
  {
    "action" : {
      "args" : "checkout @{-1}",
      "path" : "${git}",
      "showOutput" : false,
      "type" : "process",
      "waitForExit" : true
    },
    "name" : "?Switch Previous Branch",
    "target" : "repository"
  },
  {
    "action" : {
      "args" : "branch -a -r --contains $SHA",
      "path" : "${git}",
      "showOutput" : true,
      "type" : "process",
      "waitForExit" : true
    },
    "name" : "?Which branches contain this commit",
    "target" : "revision"
  }
]